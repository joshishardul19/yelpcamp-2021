<% layout('layouts/boilerplate') %>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <h1>All Campgrounds</h1>
    <% for(let camp of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(camp.images.length){ %>
                        <img class="img-fluid p-2" src="<%= camp.images[0].url %>" alt="">
                        <% } else { %>
                            <img src="https://res.cloudinary.com/dhovhpaur/image/upload/v1630248003/YelpCamp/pvwxdhfxogbyf3run1cd.jpg"
                                alt="">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a class="btn btn-success" href="/campgrounds/<%= camp._id %>"> View <%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>





            <script>
                const mapboxToken = '<%- process.env.MAPBOX_TOKEN %>'
                const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
            </script>

            <script src="/javascripts/clusterMap.js"></script>